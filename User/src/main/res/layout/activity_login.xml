<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.view.ToolBar
        android:gravity="center"
        android:layout_width="match_parent"
        app:leftIsShow="true"
        app:leftImg="@drawable/back"
        android:id="@+id/toolbar"
        app:titleText="登录"
        app:titleTextColor="#000000"
        android:layout_height="@dimen/dp_50"></com.example.view.ToolBar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/new_login_background"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:src="@drawable/community_default_user_icon"></ImageView>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/lin_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号"
                android:textSize="@dimen/dp_30"
                android:textColor="#000000"></TextView>

            <EditText
                android:id="@+id/login_username"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入用户名"></EditText>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/gray"></View>

        <LinearLayout
            android:background="@drawable/lin_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textSize="@dimen/dp_30"
                android:textColor="#000000"></TextView>

            <EditText
                android:inputType="textPassword"
                android:id="@+id/login_pwd"
                android:background="@null"
                android:layout_width="@dimen/dp_300"
                android:layout_height="wrap_content"
                android:hint="请输入密码"></EditText>

            <ImageView
                android:id="@+id/password_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/new_password_drawable_invisible"></ImageView>

        </LinearLayout>

        <Button
            android:id="@+id/login"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:text="登录"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:background="@color/red"></Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="点击登录,表示同意《尚硅谷用户协议》"
            android:layout_marginTop="@dimen/dp_10"></TextView>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/go_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="注册账号"
                android:textColor="@color/red"
                android:textSize="@dimen/dp_20"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="忘记密码？"
                android:textColor="#000000"
                android:textSize="@dimen/dp_20"></TextView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="其他登录方式"
            android:layout_marginTop="@dimen/dp_10"></TextView>


        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/lin_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/icon_share_qq"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/weight_1"></ImageView>

            <ImageView
                android:src="@drawable/icon_weibo"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/weight_1"></ImageView>

            <ImageView
                android:src="@drawable/icon_weixin"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/weight_1"></ImageView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>