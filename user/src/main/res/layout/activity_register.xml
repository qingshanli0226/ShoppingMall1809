<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/new_login_background"
    tools:context=".registers.RegisterActivity">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="#ffffff"
        android:id="@+id/bar">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/back"
            android:src="@drawable/back11"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/regbar"
            android:textSize="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_110"></TextView>
    </Toolbar>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx"
        android:layout_marginLeft="@dimen/dp_150"
        android:layout_marginTop="@dimen/dp_50"
        android:src="@drawable/new_user_login_icon"></ImageView>
    <FrameLayout
        android:layout_width="@dimen/dp_380"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:layout_width="@dimen/dp_380"
            android:layout_height="@dimen/dp_50"
            android:scaleType="fitXY"
            android:src="@drawable/bg1"
            ></ImageView>
        <LinearLayout
            android:layout_width="@dimen/dp_380"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_20"
                android:text="@string/username"></TextView>
            <EditText
                android:layout_width="@dimen/dp_260"
                android:layout_height="wrap_content"
                android:hint="@string/srusername"
                android:id="@+id/username"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@null"></EditText>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="@dimen/dp_380"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:layout_width="@dimen/dp_380"
            android:layout_height="@dimen/dp_50"
            android:scaleType="fitXY"
            android:src="@drawable/bg1"
            ></ImageView>
        <LinearLayout
            android:layout_width="@dimen/dp_380"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_20"
                android:text="@string/pasword"></TextView>
            <EditText
                android:layout_width="@dimen/dp_260"
                android:layout_height="wrap_content"
                android:hint="@string/srpassword"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@null"></EditText>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/new_password_drawable_invisible"
                    android:id="@+id/invisi"></ImageView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:src="@drawable/new_password_drawable_visible"
                    android:id="@+id/visi"></ImageView>

            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="@dimen/dp_380"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:layout_width="@dimen/dp_380"
            android:layout_height="@dimen/dp_50"
            android:scaleType="fitXY"
            android:src="@drawable/bg1"
            ></ImageView>
        <LinearLayout
            android:layout_width="@dimen/dp_380"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_20"
                android:text="@string/pasword1"></TextView>
            <EditText
                android:layout_width="@dimen/dp_220"
                android:layout_height="wrap_content"
                android:hint="@string/srpassword1"
                android:id="@+id/password1"
                android:inputType="textPassword"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@null"></EditText>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/new_password_drawable_invisible"
                    android:id="@+id/invisi1"></ImageView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:src="@drawable/new_password_drawable_visible"
                    android:id="@+id/visi1"></ImageView>

            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
    <Button
        android:layout_width="@dimen/dp_380"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="@string/regbtn"
        android:textColor="#ffffff"
        android:id="@+id/btn"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/button_false"></Button>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/djreg"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_15"></TextView>

</LinearLayout>