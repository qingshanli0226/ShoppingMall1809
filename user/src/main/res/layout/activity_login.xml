<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/new_login_background"
    tools:context=".logins.LoginActivity">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="#ffffff"
        android:id="@+id/bar">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:src="@drawable/back11"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_120"></TextView>
    </Toolbar>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx"
        android:layout_marginLeft="@dimen/dp_150"
        android:layout_marginTop="@dimen/dp_50"
        android:src="@drawable/new_user_login_icon"></ImageView>

    <FrameLayout
        android:layout_width="380dp"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="@dimen/dp_50">

    <ImageView
        android:layout_width="380dp"
        android:layout_height="@dimen/dp_50"
        android:scaleType="fitXY"
        android:src="@drawable/bg1"
        ></ImageView>
        <LinearLayout
            android:layout_width="380dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_20"
            android:text="账号"></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入用户名"
                android:id="@+id/username"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@null"></EditText>
        </LinearLayout>
</FrameLayout>

    <FrameLayout
        android:layout_width="380dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:layout_width="380dp"
            android:layout_height="@dimen/dp_50"
            android:scaleType="fitXY"
            android:src="@drawable/bg1"
            ></ImageView>
        <LinearLayout
            android:layout_width="380dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_20"
                android:text="密码"></TextView>
            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:id="@+id/password"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@null"></EditText>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/new_password_drawable_visible"
                android:id="@+id/visi"></ImageView>
        </LinearLayout>
    </FrameLayout>
    <Button
        android:layout_width="380dp"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="登录"
        android:textColor="#ffffff"
        android:id="@+id/btn"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/button_false"></Button>
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="点击登录,表示同意《尚硅谷用户协议》"
         android:gravity="center"
         android:layout_marginTop="@dimen/dp_15"></TextView>



</LinearLayout>