<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/new_login_background"
    tools:context=".logins.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="#ffffff"
        android:id="@+id/logbar">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/back"
            android:src="@drawable/back11"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loginbtn"
            android:textSize="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_150"></TextView>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx"
        android:layout_marginLeft="@dimen/dp_150"
        android:layout_marginTop="@dimen/dp_50"
        android:src="@drawable/new_user_login_icon"></ImageView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="@dimen/dp_50">

    <ImageView
        android:layout_width="@dimen/dp_380"
        android:layout_height="@dimen/dp_50"
        android:scaleType="fitXY"
        android:src="@drawable/bg1"
        ></ImageView>
        <LinearLayout
            android:layout_width="@dimen/dp_380"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_20"
            android:text="@string/username"></TextView>
            <EditText
                android:layout_width="@dimen/dp_260"
                android:layout_height="wrap_content"
                android:hint="@string/srusername"
                android:id="@+id/username"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@null"></EditText>
        </LinearLayout>
</FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_margin="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:scaleType="fitXY"
            android:src="@drawable/bg1"
            ></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_20"
                android:text="@string/pasword"></TextView>
            <EditText
                android:layout_width="@dimen/dp_260"
                android:layout_height="wrap_content"
                android:hint="@string/srpassword"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@null"></EditText>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/new_password_drawable_invisible"
                    android:id="@+id/invisi"></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:src="@drawable/new_password_drawable_visible"
                android:id="@+id/visi"></ImageView>

            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
    <Button
        android:layout_width="@dimen/dp_380"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="@string/loginbtn"
        android:textColor="#ffffff"
        android:id="@+id/btn"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/button_false"></Button>
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/djdl"
         android:gravity="center"
         android:layout_marginTop="@dimen/dp_15"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/zcuser"
         android:textColor="#ff0000"
         android:layout_marginTop="@dimen/dp_15"
         android:id="@+id/reguser"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wjpwd"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_280"
            android:id="@+id/wjpwd"></TextView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/qtlogin"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_30"></TextView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="@dimen/dp_40">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:src="@drawable/bg1"
        android:scaleType="fitXY"></ImageView>

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/icon_weibo"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/i1"></ImageView>
        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_share_qq"
            android:layout_marginLeft="@dimen/dp_170"
            android:id="@+id/i2"></ImageView>

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/icon_weixin"
            android:layout_marginLeft="@dimen/dp_280"
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/i3"></ImageView>

</FrameLayout>
</LinearLayout>