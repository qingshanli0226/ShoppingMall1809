<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F0F0"
    tools:context=".login.LoginActivity">

    <com.example.framework.view.ToolBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:id="@+id/toolbar"
        app:titleText="@string/login"
        app:leftImg="@drawable/back"
        app:leftIsShow="true"
        android:background="@color/colorWhite"
        ></com.example.framework.view.ToolBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        >
        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:id="@+id/img"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/community_default_user_icon"
            ></ImageView>
    </RelativeLayout>




    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="@dimen/dp_44"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_17"
        android:layout_gravity="center"
        android:paddingRight="@dimen/dp_17">

        <TextView
            android:layout_width="@dimen/dp_95"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/phone_number"
            android:textColor="@color/colorThree"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/et_login_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/inputName"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/colorFive"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="?android:listDivider" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="@dimen/dp_44"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_17"
        android:layout_gravity="center"
        android:paddingRight="@dimen/dp_17">

        <TextView
            android:layout_width="@dimen/dp_95"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/password"
            android:textColor="@color/colorThree"
            android:textSize="@dimen/sp_14" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:id="@+id/et_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/inputPassword"
                android:inputType="textPassword"
                android:maxLines="1"
                android:text="111"
                android:singleLine="true"
                android:textColor="@color/colorFive"
                android:layout_gravity="center"
                android:textSize="@dimen/sp_14" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/select_password"
                android:layout_gravity="center"
                android:layout_marginLeft="110dp"
                android:id="@+id/password_img"
                ></ImageView>
        </FrameLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="?android:listDivider" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_mid_size"
        android:layout_marginRight="@dimen/text_mid_size"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/colorReda"
        android:text="@string/loginBt"
        android:textColor="@color/colorF"
        android:textSize="@dimen/dp_18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击登录，表示同意《尚硅谷用户协议》"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/dp_20"
        ></TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册账号"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/colorReda"
            android:layout_alignParentLeft="true"
            android:id="@+id/regist_name"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textSize="@dimen/dp_20"
            android:id="@+id/forget_pwd"
            android:layout_alignParentRight="true"
            ></TextView>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其它登录方式"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/dp_15"
        ></TextView>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/colorWhite"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:src="@drawable/icon_weibo"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_50"
            ></ImageView>
        <ImageView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:src="@drawable/icon_share_qq"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_gravity="center"
            ></ImageView>
        <ImageView
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:src="@drawable/icon_weixin"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_gravity="center"
            ></ImageView>
    </LinearLayout>

</LinearLayout>