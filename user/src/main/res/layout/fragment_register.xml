<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".register.RegisterFragment">

    <com.example.framework.view.MyToorbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:isleft="true"
        app:isright="false"
        app:leftimg="@drawable/back"
        app:titletext="@string/registerUser"></com.example.framework.view.MyToorbar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="4"
        android:src="@drawable/atguigu_logo">
        ></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textSize="@dimen/dp_20"></TextView>

            <EditText
                android:id="@+id/editname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edUsername"
                android:textSize="@dimen/dp_20"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:text="@string/pwd"
                android:textSize="@dimen/dp_20"></TextView>

            <EditText
                android:id="@+id/editpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edPwd"
                android:textSize="@dimen/dp_20"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usereNewUser"
                android:textSize="@dimen/dp_20"></TextView>

            <EditText
                android:id="@+id/editpwdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edPwd2"
                android:textSize="@dimen/dp_20"></EditText>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:text="注册"></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="3"></LinearLayout>
</LinearLayout>