<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.RegisterActivity"
    android:background="@drawable/new_login_background"
    android:orientation="vertical">

    <com.example.framework.view.ToolBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        app:wp_CenterTitle="@string/register"
        app:wp_leftImId="@drawable/back"
        app:wp_istoolbarLeftImg="true"
        android:id="@+id/toolbar"></com.example.framework.view.ToolBar>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/new_user_login_icon"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"></ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accountNumber"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"></TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_80"
            android:hint="@string/pleaseEnterAUserName"
            android:id="@+id/act_reg_username"
            android:background="@drawable/edit_background"></EditText>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/french_grey"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"></TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_80"
            android:hint="@string/enterYourPIN"
            android:inputType="textPassword"
            android:id="@+id/act_reg_password"
            android:background="@drawable/edit_background_while"></EditText>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_password_drawable_invisible"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/regConceal1"
            android:layout_marginRight="@dimen/dp_10"></ImageView>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/french_grey"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirmPassword"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"></TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_80"
            android:hint="@string/please"
            android:inputType="textPassword"
            android:id="@+id/act_reg_passwordtwo"
            android:background="@drawable/edit_background_while"></EditText>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_password_drawable_invisible"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/regConceal2"
            android:layout_marginRight="@dimen/dp_10"></ImageView>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/french_grey"></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_20"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/button_false"
        android:id="@+id/act_reg_but"
        android:layout_margin="@dimen/dp_10"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/consent2"
        android:textColor="@color/black"
        android:layout_gravity="center"></TextView>

</LinearLayout>