<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        android:background="#EEEEEE">

        <CheckBox
            android:id="@+id/shoppingTrolley_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/checkbox_unselected"
            android:button="@null"></CheckBox>

        <ImageView
            android:id="@+id/shoppingTrolley_img"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_90"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"></ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10">

            <TextView
                android:id="@+id/shoppingTrolley_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:text="默认值"
                android:textSize="@dimen/dp_15"></TextView>

            <TextView
                android:id="@+id/shoppingTrolley_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_30"
                android:text="￥70.0"
                android:textColor="@color/red"
                android:textSize="@dimen/dp_15"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_20">


                <TextView
                    android:id="@+id/shoppingTrolley_num"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/dp_20"></TextView>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray"></View>

</LinearLayout>