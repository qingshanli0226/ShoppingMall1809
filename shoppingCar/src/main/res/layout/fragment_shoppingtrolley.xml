<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">

        <com.example.framework.view.ToolBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:wp_CenterTitle="@string/shoppingTrolley"
            app:wp_RightTitle="@string/compile"></com.example.framework.view.ToolBar>


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shoppingTrolley_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_80"></androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <CheckBox
            android:id="@+id/checkAll"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/checkbox_unselected"
            android:button="@null"></CheckBox>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_60"
            android:text="@string/checkAll"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_17"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_120"
            android:text="@string/total"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_17"></TextView>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_180"
            android:text="ï¿¥0.0"
            android:textColor="@color/red"
            android:textSize="@dimen/dp_17"></TextView>

        <TextView
            android:id="@+id/accout"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_false"
            android:gravity="center"
            android:text="@string/account"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_17"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_120"
            android:background="@color/white"
            android:visibility="gone"
            android:id="@+id/shop_delet_layout">
            <TextView
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_60"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_false"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:id="@+id/delete"
                android:textSize="@dimen/dp_17"></TextView>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>