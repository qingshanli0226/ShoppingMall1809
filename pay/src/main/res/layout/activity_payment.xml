<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".payment.PaymentActivity">

    <com.example.framework.view.ToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:app_back_color_toob="@color/white"
        app:app_left_isshow="true"
        app:app_left_src="@drawable/top_bar_left_back"
        app:app_text="@string/payment"
        app:app_text_color="@color/black"></com.example.framework.view.ToolBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/order_symbol"
            android:textColor="@color/red"
            android:textSize="@dimen/dm_dp_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/payPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="@dimen/dm_dp_50"
            android:textStyle="bold"
            android:gravity="center"
            ></TextView>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_dp_100"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_dp_50"
            >
            <ImageView
                android:layout_width="@dimen/dm_dp_50"
                android:layout_height="@dimen/dm_dp_50"
                android:src="@drawable/weix"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="微信支付"
                android:textSize="@dimen/dm_dp_25"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dm_dp_50"
                ></TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/dm_dp_50"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_dp_50"
            >
            <ImageView
                android:layout_width="@dimen/dm_dp_50"
                android:layout_height="@dimen/dm_dp_50"
                android:src="@drawable/zfb"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="支付宝支付"
                android:textSize="@dimen/dm_dp_25"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dm_dp_50"
                ></TextView>

        </RelativeLayout>
        <RadioGroup
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dm_dp_100"
            android:layout_marginLeft="350dp"
            >
            <RadioButton
                android:id="@+id/weiCheck"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                ></RadioButton>
            <RadioButton
                android:id="@+id/zfbCheck"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                ></RadioButton>
        </RadioGroup>
    </RelativeLayout>

    <Button
        android:id="@+id/pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立即支付"
        android:textColor="@color/white"
        android:background="@drawable/pay_back"
        android:layout_margin="@dimen/dm_dp_30"
        ></Button>

</LinearLayout>