<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/dm_dp_200">
    <ImageView
        android:id="@+id/itemOrderImg"
        android:src="@color/red"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dm_dp_20"
        android:layout_width="@dimen/dm_dp_150"
        android:layout_height="@dimen/dm_dp_150"></ImageView>
    <TextView
        android:id="@+id/itemOrderTitle"
        android:text="你好世界"
        android:layout_toRightOf="@id/itemOrderImg"
        android:layout_alignTop="@id/itemOrderImg"
        android:layout_marginLeft="@dimen/dm_dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <LinearLayout
        android:layout_toRightOf="@id/itemOrderImg"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dm_dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="$"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/itmeOrderPrice"
            android:text="10.0"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dm_dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="数量:"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/itemOrderNum"
            android:text="10"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
</RelativeLayout>