<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pay.user.findforpay.FindForPayActivity">
    <com.example.framework.view.ToolBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:id="@+id/toolbar"
        app:wp_istoolbarLeftImg="true"
        app:wp_leftImId="@drawable/back"
        app:wp_CenterTitle="@string/sendObligation"></com.example.framework.view.ToolBar>

    <View
        android:layout_width="@dimen/dp_400"
        android:layout_gravity="center"
        android:layout_height="@dimen/dp_1"
        android:background="@color/darkAshen"></View>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/shop_act_pay_rv"
        ></androidx.recyclerview.widget.RecyclerView>
</LinearLayout>