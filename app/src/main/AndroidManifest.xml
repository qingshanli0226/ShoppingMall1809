<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shoppingmallsix">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".message.MessageActivity"></activity>
        <activity android:name=".goodsactivity.GoodsActivity" />
        <activity android:name=".sendgoodsactivity.SendGoodsActivity" />
        <activity android:name=".obligationactivity.ObligationActivity" />
        <activity android:name=".messageactivity.MessageActivity" />
        <activity android:name="com.example.pay.demo.PayDemoActivity" />
        <activity
            android:name=".welcomeactivity.WelcomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mainactivity.MainActivity"
            android:launchMode="singleTask" />
    </application>

</manifest>