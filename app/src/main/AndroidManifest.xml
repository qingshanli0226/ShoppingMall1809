<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shoppingmall">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".config.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShoppingMall"
        android:usesCleartextTraffic="true">
        <activity android:name=".pay.dropshipping.DropShippingActivity"></activity>
        <activity android:name=".pay.awitpayment.AwaitPaymentActivity" />
        <activity android:name=".pay.payment.PaymentActivity" />
        <activity android:name=".pay.order.OrderActivity" />
        <activity android:name=".pay.unpaid.PayDealActivity" />
        <activity android:name=".main.message.MessageActivity" />
        <activity android:name=".main.mine.ExitUserActivity" />
        <activity
            android:name=".welcome.WelcomeActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".main.MainActivity" />
    </application>

</manifest>