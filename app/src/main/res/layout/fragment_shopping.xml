<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".shopp.ShoppingFragment">

    <com.example.view.ToolBar
        android:gravity="center"
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        app:titleText="@string/shop_car"
        app:titleTextColor="#000000"
        android:layout_height="@dimen/dp_50"></com.example.view.ToolBar>

    <View
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/gray"></View>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/buy_car_rv"></androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:visibility="gone"
            android:id="@+id/shopping_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/atguigu_logo"></ImageView>

        <Button
            android:visibility="gone"
            android:id="@+id/go_home"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_style"
            android:text="@string/shop_stroll"></Button>

    </LinearLayout>

</LinearLayout>