<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pay.payment.PaymentActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/back11"
            android:id="@+id/detailBack"></ImageView>
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/PayToolbar"></TextView>
        <ImageView
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/menu"
            android:id="@+id/detailMenu"></ImageView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/order_symbol"
            android:textColor="@color/red"
            android:textSize="@dimen/dp_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/payPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="@dimen/dp_50"
            android:textStyle="bold"
            android:gravity="center"
            ></TextView>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            >
            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@drawable/weix"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="微信支付"
                android:textSize="@dimen/dp_25"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_50"
                ></TextView>
            <CheckBox
                android:id="@+id/weiCheck"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                ></CheckBox>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            >
            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@drawable/zfb"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="支付宝支付"
                android:textSize="@dimen/dp_25"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_50"
                ></TextView>
            <CheckBox
                android:id="@+id/zfbCheck"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                ></CheckBox>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立即支付"
        android:textColor="@color/white"
        android:background="@drawable/pay_back"
        android:layout_margin="@dimen/dp_30"
        ></Button>
</LinearLayout>