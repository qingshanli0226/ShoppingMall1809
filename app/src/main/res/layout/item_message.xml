<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/dp_10"
    android:padding="@dimen/dp_10"
    android:background="@drawable/back_item_message"
    android:layout_height="@dimen/dp_120">

    <TextView
        android:layout_margin="@dimen/dp_10"
        android:id="@+id/title_item_message"
        android:text="111"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_10"
        android:id="@+id/isnew_item_message"
        android:textColor="#f00"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:text="新"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:text="支付失败"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:id="@+id/msg_item_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:textSize="10sp"
        android:text="2020年12月23日 09:40"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_10"
        android:id="@+id/time_item_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>