<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/item_message"
    android:layout_margin="@dimen/dp_10"
    android:padding="@dimen/dp_10"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="支付消息:"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_50"
        android:text="支付失败"></TextView>

    <TextView
        android:layout_width="@dimen/dp_25"
        android:layout_height="wrap_content"
        android:text="新"
        android:textSize="@dimen/dp_20"
        android:textColor="@color/red"
        android:textStyle="italic|bold"
        android:id="@+id/new_text"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021年05月28日 09:01:01"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_90"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:id="@+id/message_time"></TextView>

</RelativeLayout>