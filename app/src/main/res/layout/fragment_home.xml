<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.home.HomeFragment"
    android:orientation="vertical">

    <com.example.framework.view.ToolBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:id="@+id/toolbar"
        android:visibility="gone"></com.example.framework.view.ToolBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/red">
        <LinearLayout
            android:layout_width="@dimen/dp_350"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/home_rounded_white">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:src="@drawable/home_search_icon"
                android:layout_height="@dimen/dp_40"
                android:padding="@dimen/dp_5"></ImageView>
            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/home_rounded_white"
                android:hint="输入搜索信息"
                android:layout_height="match_parent"></EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:tint="@color/colorB"
                android:src="@drawable/community_message_icon"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="消息"
                android:textColor="@color/colorB"></TextView>
        </LinearLayout>
    </RelativeLayout>


    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:id="@+id/frag_home_banner"></com.youth.banner.Banner>




</LinearLayout>