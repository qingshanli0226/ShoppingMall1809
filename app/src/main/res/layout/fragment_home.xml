<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#ed4040">

        <LinearLayout
            android:layout_width="@dimen/dp_330"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:background="@drawable/lin_style"
            android:layout_marginLeft="@dimen/dp_20">
         <ImageView
             android:layout_width="@dimen/dp_50"
             android:layout_height="match_parent"
             android:src="@mipmap/search"
             android:layout_marginLeft="@dimen/dp_10"
             android:id="@+id/img_search"
             ></ImageView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:hint="@string/please_message"
                android:editable="false"
                android:background="@null"
                android:id="@+id/edit_message"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/unreadMessage"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="@dimen/weight_7"
                android:id="@+id/btn_message"
                android:src="@drawable/community_message_icon"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="@dimen/weight_3"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/unreadMessageNum"
                android:text="消息"></TextView>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_re"></androidx.recyclerview.widget.RecyclerView>


</LinearLayout>