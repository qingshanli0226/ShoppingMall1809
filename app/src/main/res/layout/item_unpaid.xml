<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_410"
    android:layout_height="@dimen/dp_100"
    android:orientation="vertical"
    android:background="@drawable/circle_unpaid">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="年份"
        android:textSize="@dimen/dp_20"
        android:id="@+id/unpaid_year"
        android:layout_marginLeft="@dimen/dp_15"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_30"
        android:text="0000"
        android:layout_marginLeft="@dimen/dp_30"
        android:id="@+id/unpaid_order"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价钱"
        android:layout_gravity="right"
        android:id="@+id/unpaid_price"
        android:layout_marginRight="@dimen/dp_10"></TextView>

</LinearLayout>