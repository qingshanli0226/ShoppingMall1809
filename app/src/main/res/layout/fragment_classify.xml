<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.classifyfragment.ClassifyFragment">

    <com.example.framework.view.ToolBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:id="@+id/toolbar"
        android:visibility="gone"
        ></com.example.framework.view.ToolBar>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_15"
        >

        <Button
            android:id="@+id/buttonLeft"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:background="@drawable/select_left_show"
            android:text="分类"
            android:textColor="@color/colorWhite"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_right"
            android:text="标签"
            android:id="@+id/buttonRight"
            android:textColor="@color/colorRedqian"
            ></Button>
    </LinearLayout>

</LinearLayout>