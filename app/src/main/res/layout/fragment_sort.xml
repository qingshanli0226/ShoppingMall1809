<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.sort.SortFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">
        <RadioGroup
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:orientation="horizontal"
            android:id="@+id/sortRadioGroup">

            <RadioButton
                android:id="@+id/sort_left"
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/sort_type_broder_left"
                android:gravity="center"
                android:button="@null"
                android:checked="true"
                android:text="@string/classification"
                android:textColor="@drawable/sort_type_text"></RadioButton>

            <RadioButton
                android:id="@+id/sort_right"
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/sort_type_broder_right"
                android:gravity="center"
                android:text="@string/label"
                android:button="@null"
                android:textColor="@drawable/sort_type_text"></RadioButton>
        </RadioGroup>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_search_white"></ImageView>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray"></View>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sortVp"></androidx.viewpager.widget.ViewPager>

</LinearLayout>