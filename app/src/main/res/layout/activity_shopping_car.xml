<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shopcar.ShoppingCarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.framework.view.ToolBar
                android:id="@+id/toolbar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                app:leftImg="@drawable/back"
                app:leftIsShow="true"
                app:titleText="购物车"></com.example.framework.view.ToolBar>

            <TextView
                android:id="@+id/shopcarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="编辑"
                android:textSize="@dimen/dp_20"></TextView>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#B8B2B2"></View>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shopRv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"></androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/shopcarCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:button="@drawable/check_choose"
                android:text="全选"
                android:textSize="@dimen/dp_20"></CheckBox>

            <TextView
                android:id="@+id/shopcarTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginLeft="@dimen/dp_20"
                android:text="合计："></TextView>

            <TextView
                android:id="@+id/shopcarDoaller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="￥"
                android:textColor="@color/colorRedqian"></TextView>

            <TextView
                android:id="@+id/shopcarMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="111"
                android:textColor="@color/colorRedqian"></TextView>

            <Button
                android:id="@+id/buycarBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_40"
                android:background="@color/colorRed"
                android:text="结算"></Button>
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/deleteCarBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="230dp"
        android:background="@drawable/words"
        android:text="删除"
        android:visibility="gone">

    </Button>

    <Button
        android:id="@+id/shouCangCarBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/wordsred"
        android:text="收藏"
        android:visibility="gone"></Button>

</RelativeLayout>