<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".details.DetailsActivity">

    <LinearLayout
        android:id="@+id/details_lin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <com.example.view.ToolBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            app:leftImg="@drawable/back"
            app:leftIsShow="true"
            app:rightImage="@mipmap/icon_more"
            app:rightIsShow="true"
            app:titleText="@string/details_tob_tit"
            app:titleTextColor="#000000"></com.example.view.ToolBar>

        <ImageView
            android:id="@+id/details_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_250"
            android:src="@mipmap/ic_launcher_round"></ImageView>

        <TextView
            android:id="@+id/details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="#000000"
            android:textSize="@dimen/dp_20"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/details_shop_text"></TextView>

        <TextView
            android:id="@+id/details_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#F44336"
            android:textSize="@dimen/dp_20"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10">

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/weight_0.5"></LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/weight_8"
                android:background="#999999"></LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/weight_0.5"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/details_by"
                android:textColor="#000000"
                android:textSize="@dimen/dp_20"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_shipper"
                android:textColor="#F44336"
                android:textSize="@dimen/dp_20"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_consignment"
                android:textColor="#000000"
                android:textSize="@dimen/dp_20"></TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="@dimen/weight_1">
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="@dimen/weight_1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="@dimen/weight_7"
                android:src="@mipmap/user"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0"
                android:text="@string/details_contact_service"
                android:textColor="#838385"
                android:textSize="@dimen/dp_20"
                android:layout_gravity="center"
                android:layout_weight="@dimen/weight_3"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="@dimen/weight_1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="@dimen/weight_7"
                android:src="@mipmap/good_uncollected"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0"
                android:text="@string/details_collect"
                android:textColor="#838385"
                android:textSize="@dimen/dp_20"
                android:layout_gravity="center"
                android:layout_weight="@dimen/weight_3"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/add_shop"
            android:layout_weight="@dimen/weight_1">
            <ImageView
                android:id="@+id/buy_car"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="@dimen/weight_7"
                android:src="@mipmap/add"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0"
                android:text="@string/shop_car"
                android:textColor="#838385"
                android:textSize="@dimen/dp_20"
                android:layout_gravity="center"
                android:layout_weight="@dimen/weight_3"></TextView>
        </LinearLayout>
        <Button
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/weight_2"
            android:background="#F44336"
            android:textColor="#ffffff"
            android:text="@string/details_add_shop_car"
            android:textSize="@dimen/dp_20"
            android:id="@+id/btn_add"></Button>
    </LinearLayout>


</LinearLayout>