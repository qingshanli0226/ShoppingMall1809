<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".details.DetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">
        <com.example.view.ToolBar
            android:gravity="center"
            android:layout_width="match_parent"
            app:leftIsShow="true"
            app:leftImg="@drawable/back"
            android:id="@+id/toolbar"
            app:titleText="登录"
            app:titleTextColor="#000000"
            app:rightIsShow="true"
            app:rightImage="@mipmap/icon_more"
            android:layout_height="@dimen/dm_dp_50dp"></com.example.view.ToolBar>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_250"
            android:id="@+id/details_img"
            android:src="@mipmap/ic_launcher_round"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textColor="#000000"
            android:textSize="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_20"
            android:id="@+id/details_name"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:text="预售截止10月15日，预售期为限量礼盒版，包括特制木盒*1、画集*1、邮票*1套、书签*1、贴纸*1、信封*1、礼盒特"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textSize="@dimen/dp_20"
            android:text="价钱"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_15"
            android:id="@+id/details_price"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_25">
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:background="#999999"
                android:layout_weight="8"></LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="由"
                android:textColor="#000000"
                android:textSize="@dimen/dp_20"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尚硅谷发货"
                android:textSize="@dimen/dp_20"
                android:textColor="#F44336"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发货"
                android:textColor="#000000"
                android:textSize="@dimen/dp_20"></TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:src="@mipmap/user"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="联系客服"
                android:textColor="#838385"
                android:textSize="@dimen/dp_20"
                android:layout_gravity="center"
                android:layout_weight="2"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:src="@mipmap/good_uncollected"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="收藏"
                android:textColor="#838385"
                android:textSize="@dimen/dp_20"
                android:layout_gravity="center"
                android:layout_weight="2"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/add_shop"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/buy_car"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:src="@mipmap/add"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0"
                android:text="购物车"
                android:textColor="#838385"
                android:textSize="@dimen/dp_20"
                android:layout_gravity="center"
                android:layout_weight="2"></TextView>
        </LinearLayout>
        <Button
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/weight_2"
            android:background="#F44336"
            android:textColor="#ffffff"
            android:text="加入购物车"
            android:textSize="@dimen/dp_20"
            android:id="@+id/btn_add"></Button>
    </LinearLayout>


</LinearLayout>