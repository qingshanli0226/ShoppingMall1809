<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.message.MessageActivity">

    <com.example.view.ToolBar
        app:leftImg="@drawable/back"
        app:leftIsShow="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        app:titleText="@string/message_page"
        app:titleTextColor="#000000"
        android:layout_height="@dimen/dp_40"></com.example.view.ToolBar>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/message_rv"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>