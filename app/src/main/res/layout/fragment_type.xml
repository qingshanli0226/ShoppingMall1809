<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.type.TypeFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/dp_35"
            android:id="@+id/frag_type_radiogroup"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/frag_type_radio_left"
                android:layout_width="@dimen/dp_80"
                android:button="@null"
                android:text="@string/type"
                android:gravity="center"
                android:checked="true"
                android:textColor="@drawable/type_select_radiobutton_test"
                android:background="@drawable/type_select_radiobutton_background_left"
                android:layout_height="match_parent"></RadioButton>


            <RadioButton
                android:id="@+id/frag_type_radio_right"
                android:layout_width="@dimen/dp_80"
                android:button="@null"
                android:text="@string/label"
                android:gravity="center"
                android:textColor="@drawable/type_select_radiobutton_test"
                android:background="@drawable/type_select_radiobutton_background_right"
                android:layout_height="match_parent"></RadioButton>

        </RadioGroup>


        <ImageView
            android:padding="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_search_white"
            android:layout_alignParentRight="true"></ImageView>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/darkAshen"></View>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frag_type_vp"></androidx.viewpager.widget.ViewPager>

</LinearLayout>