<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/home_arrow_left_flash"></ImageView>

            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/pale_black"
                android:text="@string/quickShoppingToday"></TextView>

            <TextView
                android:padding="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:text="00:00:00"
                android:gravity="center"
                android:id="@+id/frag_home_seckil_time"
                android:textColor="@color/ashen"
                android:background="@drawable/home_quick_time_test"
                android:layout_height="@dimen/dp_30"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10">
            <TextView
                android:layout_marginRight="@dimen/dp_10"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_17"
                android:text="@string/viewMore"></TextView>

            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/home_arrow_right"></ImageView>


        </LinearLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frag_home_seckil_rv"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>