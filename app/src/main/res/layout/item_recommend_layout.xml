<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_dp_70">

        <ImageView
            android:id="@+id/itemRecommendLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm_dp_40"
            android:gravity="center"
            android:text="新品推荐"
            android:textColor="@color/black"
            android:textSize="@dimen/dm_dp_20"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dm_dp_40"
            android:gravity="center"
            android:text="查看更多"
            android:textSize="@dimen/dm_dp_20"></TextView>

        <ImageView
            android:id="@+id/itemRecommendRight"
            android:layout_width="@dimen/dm_dp_20"
            android:layout_height="@dimen/dm_dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemRecommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>