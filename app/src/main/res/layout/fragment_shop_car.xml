<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.shopcar.ShopCarFragment">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shopchar"
            android:gravity="center"
            android:textSize="@dimen/dp_30"
            android:textStyle="bold"></TextView>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="@dimen/dp_380"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_20"></View>

    <ImageView
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_250"
        android:layout_marginLeft="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_150"
        android:src="@drawable/empty_cart"></ImageView>
    <TextView
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/redc"
        android:text="去逛逛"
        android:gravity="center"
        android:id="@+id/goHomeFragment"
        android:textSize="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_160"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="#ff0000"></TextView>

</LinearLayout>