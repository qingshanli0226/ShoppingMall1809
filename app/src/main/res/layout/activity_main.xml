<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <com.example.framework.view.ToolBar
        android:visibility="gone"
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/mainLinear"
        android:orientation="horizontal"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_dp_0"/>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_dp_0">

        <RadioGroup
            android:id="@+id/mainGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/mainOne"
                android:text="@string/main_one"
                android:textColor="@drawable/text_color"
                android:gravity="center"
                android:drawableTop="@drawable/main_one"
                android:button="@null"
                android:layout_weight="1"
                android:layout_width="@dimen/dm_dp_0"
                android:layout_height="match_parent"/>
            <RadioButton
                android:id="@+id/mainTwo"
                android:text="@string/main_two"
                android:textColor="@drawable/text_color"
                android:gravity="center"
                android:drawableTop="@drawable/main_two"
                android:button="@null"
                android:layout_weight="1"
                android:layout_width="@dimen/dm_dp_0"
                android:layout_height="match_parent"/>
            <RadioButton
                android:id="@+id/mainThree"
                android:text="@string/main_three"
                android:textColor="@drawable/text_color"
                android:gravity="center"
                android:drawableTop="@drawable/main_three"
                android:button="@null"
                android:layout_weight="1"
                android:layout_width="@dimen/dm_dp_0"
                android:layout_height="match_parent"/>
            <RadioButton
                android:id="@+id/mainFour"
                android:text="@string/main_four"
                android:textColor="@drawable/text_color"
                android:gravity="center"
                android:drawableTop="@drawable/main_four"
                android:button="@null"
                android:layout_weight="1"
                android:layout_width="@dimen/dm_dp_0"
                android:layout_height="match_parent"/>
            <RadioButton
                android:id="@+id/mainFive"
                android:text="@string/main_five"
                android:textColor="@drawable/text_color"
                android:gravity="center"
                android:drawableTop="@drawable/main_five"
                android:button="@null"
                android:layout_weight="1"
                android:layout_width="@dimen/dm_dp_0"
                android:layout_height="match_parent"/>
        </RadioGroup>
    </RelativeLayout>


</LinearLayout>