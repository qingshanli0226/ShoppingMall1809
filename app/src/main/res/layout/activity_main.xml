<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:id="@+id/act_home_ll"
        android:orientation="vertical"
        android:layout_weight="1"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_15"
            android:id="@+id/act_radio_group">
            <RadioButton
                android:id="@+id/act_radio_home"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:button="@null"
                android:text="@string/main"
                android:gravity="center"
                android:checked="true"
                android:textColor="@drawable/home_select_radiobutton_test"
                android:drawableTop="@drawable/home_select_radiobutton_img_home"
                android:layout_height="match_parent"></RadioButton>

            <RadioButton
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:button="@null"
                android:text="@string/type"
                android:id="@+id/act_radio_type"
                android:gravity="center"
                android:textColor="@drawable/home_select_radiobutton_test"
                android:drawableTop="@drawable/home_select_radiobutton_img_type"
                android:layout_height="match_parent"></RadioButton>

            <RadioButton
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:id="@+id/act_radio_community"
                android:button="@null"
                android:textColor="@drawable/home_select_radiobutton_test"
                android:text="@string/discover"
                android:drawableTop="@drawable/home_select_radiobutton_img_community"
                android:gravity="center"
                android:layout_height="match_parent"></RadioButton>

            <RadioButton
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:button="@null"
                android:id="@+id/act_radio_cart"
                android:textColor="@drawable/home_select_radiobutton_test"
                android:text="@string/shoppingTrolley"
                android:drawableTop="@drawable/home_select_radiobutton_img_cart"
                android:gravity="center"
                android:layout_height="match_parent"></RadioButton>

            <RadioButton
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:button="@null"
                android:id="@+id/act_radio_user"
                android:textColor="@drawable/home_select_radiobutton_test"
                android:text="@string/personalCenter"
                android:drawableTop="@drawable/home_select_radiobutton_img_user"
                android:gravity="center"
                android:layout_height="match_parent"></RadioButton>

        </RadioGroup>

        <TextView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:text="0"
            android:id="@+id/label"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_85"
            android:background="@drawable/text_background"></TextView>

    </RelativeLayout>

</LinearLayout>