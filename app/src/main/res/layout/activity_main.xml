<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn"></Button>
    <FrameLayout
        android:id="@+id/mainFra"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"></FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/mainComm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.flyco.tablayout.CommonTabLayout>

        <com.example.framework.view.MessageNumView
            android:id="@+id/numView"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_250"></com.example.framework.view.MessageNumView>
    </RelativeLayout>


</LinearLayout>