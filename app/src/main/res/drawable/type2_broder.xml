<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true" android:color="@color/red">
        <shape android:shape="rectangle">
            <solid android:color="@color/red"></solid>
            <corners android:topRightRadius="@dimen/dm_dp_30" android:bottomRightRadius="@dimen/dm_dp_30"></corners>
        </shape>
    </item>
    <item android:state_checked="false" android:color="@color/white">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/dm_dp_1" android:color="@color/red"></stroke>
            <solid android:color="@color/white"></solid>
            <corners android:topRightRadius="@dimen/dm_dp_30" android:bottomRightRadius="@dimen/dm_dp_30"></corners>
        </shape>
    </item>
</selector>