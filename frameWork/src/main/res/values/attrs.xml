<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ProgressView">
        <attr name="app_textsize" format="dimension"/>
        <attr name="app_progress" format="integer"/>
        <attr name="app_back_color" format="color"/>
        <attr name="app_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="ToolBar">
        <attr name="app_text" format="string"/>
        <attr name="app_right_text" format="string"/>
        <attr name="app_text_color" format="color"/>
        <attr name="app_right_text_color" format="color"/>
        <attr name="app_back_color_toob" format="color"/>
        <attr name="app_left_src" format="reference"/>
        <attr name="app_right_src" format="reference"/>
        <attr name="app_left_isshow" format="boolean"/>
        <attr name="app_right_isshow" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ItemBar">
        <attr name="app_item_text" format="string"/>
        <attr name="app_item_text_size" format="dimension"/>
        <attr name="app_item_text_color" format="color"/>
        <attr name="app_item_back_color" format="color"/>
        <attr name="app_item_left_src" format="reference"/>
        <attr name="app_item_right_src" format="reference"/>
        <attr name="app_item_left_isshow" format="boolean"/>
        <attr name="app_item_right_isshow" format="boolean"/>

        <attr name="app_item_right_text" format="string"/>
        <attr name="app_item_right_text_size" format="dimension"/>
        <attr name="app_item_right_text_color" format="color"/>
        <attr name="app_item_right_text_isshow" format="boolean"/>
    </declare-styleable>
</resources>